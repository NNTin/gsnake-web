{
  "name": "gravity-snake",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm test",
    "build": "npm run build:types && npm run build:wasm && vite build",
    "build:types": "python3 ../scripts/generate_ts_types.py",
    "build:wasm": "python3 ../scripts/build_wasm.py",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "gsnake-wasm": "file:../gsnake-core/engine/bindings/wasm/pkg"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.6.0",
    "tslib": "^2.6.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.0.0"
  }
}
