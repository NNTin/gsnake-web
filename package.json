{
  "name": "gsnake-web",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "workspaces": [
    "packages/gsnake-web-ui",
    "packages/gsnake-web-app"
  ],
  "scripts": {
    "preinstall": "node scripts/detect-local-deps.js",
    "postinstall": "npm run build -w gsnake-web-ui",
    "dev": "concurrently -k -n ui,app \"npm run watch -w gsnake-web-ui\" \"npm run dev -w gsnake-web-app\"",
    "build": "npm run build -w gsnake-web-ui && npm run build -w gsnake-web-app",
    "build:hook": "npm run build:wasm -w gsnake-web-app && npm run build",
    "build:types": "npm run build:types -w gsnake-web-app",
    "build:wasm": "npm run build:wasm -w gsnake-web-app",
    "preview": "npm run preview -w gsnake-web-app --",
    "check": "npm run check -w gsnake-web-app",
    "test": "npm run test -w gsnake-web-app",
    "test:coverage": "npm run test:coverage -w gsnake-web-app",
    "coverage": "npm run coverage -w gsnake-web-app",
    "test:watch": "npm run test:watch -w gsnake-web-app",
    "validate:sprites": "node scripts/validate-sprites.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
