{
  "name": "gsnake-web-app",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "preinstall": "node scripts/detect-local-deps.js",
    "dev": "vite",
    "prebuild": "node scripts/build-wasm.js && npm test",
    "build": "vite build",
    "build:hook": "node scripts/build-wasm.js && vite build",
    "build:types": "python3 ../../../scripts/generate_ts_types.py",
    "build:wasm": "node scripts/build-wasm.js",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "coverage": "npm run test:coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "gsnake-wasm": "file:../../../gsnake-core/engine/bindings/wasm/pkg",
    "gsnake-web-ui": "file:../gsnake-web-ui"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.18",
    "ajv": "^8.18.0",
    "jsdom": "^27.4.0",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.18"
  }
}
